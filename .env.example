# QuantPulse Configuration Example
# Copy this file to .env and update the values

# App Configuration
APP_NAME=QuantPulse
DEBUG=true
VERSION=1.0.0
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
DATABASE_URL=postgresql://quantpulse:password@localhost:5432/quantpulse
# For SQLite (development):
# DATABASE_URL=sqlite:///./quantpulse.db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Alpaca Trading API
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_SECRET_KEY=your-alpaca-secret-key
ALPACA_PAPER=true
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Stripe Payment Integration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs for Subscription Plans
BASIC_PLAN_PRICE_ID=price_basic_plan_id
PLUS_PLAN_PRICE_ID=price_plus_plan_id
ULTRA_PLAN_PRICE_ID=price_ultra_plan_id

# IP Whitelist (comma-separated)
ALLOWED_IPS=127.0.0.1,::1

# Rate Limiting
WEBHOOK_RATE_LIMIT=100

# Logging
LOG_FILE=quantpulse.log